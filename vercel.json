{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/login", "destination": "/login.html" },
    { "source": "/schedule", "destination": "/schedule.html" },
    { "source": "/search", "destination": "/search.html" },
    { "source": "/detail", "destination": "/detail.html" },
    { 
      "source": "/sanka-api/:match*", 
      "destination": "https://www.sankavollerei.com/anime/donghua/:match*" 
    }
  ]
}
